{
    "manifest_version": 2,
    "name": "KOSHIAN 返信フォーム拡張 改",
    "version": "1.2.3",
    "description": "返信した後ページをリロードしないようにします",
    "icons": {
        "48": "icons/icon-48.png"
    },
    "author": "akoya_tomo",
    "homepage_url": "https://github.com/akoya-tomo/koshian_form_futaba_kai/",
    "content_scripts": [
        {
            "matches": [
                "*://*.2chan.net/*/res/*"
            ],
            "js": [
                "encoding.min.js",
                "const.js",
                "util.js",
                "res.js"
            ],
            "css": [
                "style.css"
            ]
        },
        {
            "matches": [
                "*://*.2chan.net/*/futaba.htm"
            ],
            "js": [
                "encoding.min.js",
                "const.js",
                "util.js",
                "board.js"
            ],
            "css": [
                "style.css"
            ]
        }
    ],
    "options_ui":{
        "page":"options.html"
    },
    "permissions":[
        "<all_urls>",
        "storage", "clipboardRead"
    ],
    "applications": {
        "gecko": {
          "id": "{1BE13B04-2E5B-11E8-90A5-384B8462A347}",
          "update_url": "https://raw.githubusercontent.com/akoya-tomo/koshian_form_futaba_kai/master/updates.json"
        }
    }
}
